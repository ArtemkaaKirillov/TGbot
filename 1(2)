import telebot
from telebot import types

token = "6657590037:AAH4nYyRYskgnUUR8phgtobMMAQ38lPCxCY"
bot = telebot.TeleBot(token)


@bot.message_handler(commands=['start'])
def start(message):
    markup = types.InlineKeyboardMarkup()
    btn1 = types.InlineKeyboardButton('–†–∞—Å—Å—á–∏—Ç–∞—Ç—å –ø—Ä–æ–µ–∫—Ç üßæ', callback_data='yes_1')
    markup.row(btn1)
    bot.send_message(message.chat.id, '–ó–¥—Ä–∞–≤—Å—Ç–≤—É–π—Ç–µ  üñê\n–Ø —á–∞—Ç-–±–æ—Ç –∫–æ–º–ø–∞–Ω–∏–∏ ARTEX\n–ü–æ–º–æ–≥—É –≤–∞–º —Ä–∞—Å—â–∏—Ç–∞—Ç—å —Å—Ç–æ–∏–º–æ—Å—Ç—å —Å–æ–∑–¥–∞–Ω–∏—è —Å–∞–π—Ç–∞ üìù\n–î–ª—è —ç—Ç–æ–≥–æ –≤—ã–±–µ—Ä–∏—Ç–µ –Ω—É–∂–Ω—É—é –≤–∞–º –∫–Ω–æ–ø–∫—É ‚¨áÔ∏è', reply_markup=markup)


@bot.callback_query_handler(func=lambda call: True)
def callback(call):
    if call.data == "yes_1":
        markup = types.InlineKeyboardMarkup()
        btn1 = types.InlineKeyboardButton('–°–æ–∑–¥–∞–Ω–∏–µ —Å–∞–π—Ç–æ–≤ üóí', callback_data='yes_2')
        btn2 = types.InlineKeyboardButton('–†–µ–∫–ª–∞–º–∞ üì¢', callback_data='yes_3')
        btn3 = types.InlineKeyboardButton('–ü—Ä–æ–¥–≤–∏–∂–µ–Ω–∏–µ üìà', callback_data='yes_4')
        btn4 = types.InlineKeyboardButton('–ü–æ–ª—É—á–∏—Ç—å –∫–æ–Ω—Å—É–ª—å—Ç–∞—Ü–∏—é üí¨', callback_data='yes_5')
        markup.row(btn1)
        markup.row(btn2)
        markup.row(btn3)
        markup.row(btn4)
        bot.send_message(call.message.chat.id,
                         '–ö–∞–∫—É—é –∑–∞–¥–∞—á—É –Ω—É–∂–Ω–æ —Ä–µ—à–∏—Ç—å üìù?',
                         reply_markup=markup)

    if call.data == "yes_2":
        markup = types.InlineKeyboardMarkup()
        btn1 = types.InlineKeyboardButton('–õ–µ–Ω–¥–∏–Ω–≥ üìÉ', callback_data='yes_6')
        btn2 = types.InlineKeyboardButton('–ë–∏–∑–Ω–µ—Å —Å–∞–π—Ç üíº', callback_data='yes_7')
        btn3 = types.InlineKeyboardButton('–ò–Ω—Ç–µ—Ä–Ω–µ—Ç –º–∞–≥–∞–∑–∏–Ω üõí', callback_data='yes_8')
        markup.row(btn1, btn2)
        markup.row(btn3)
        bot.send_message(call.message.chat.id,
                         '–í—ã–±–µ—Ä–∏—Ç–µ –ø–æ–¥—Ö–æ–¥—è–∏–π –¥–ª—è –≤–∞—Å —Å–ø–æ—Å–æ–± ‚¨áÔ∏è',
                         reply_markup=markup)

    if call.data == "yes_6":
        markup = types.InlineKeyboardMarkup()
        btn1 = types.InlineKeyboardButton('–ü—Ä–æ–¥–∞–∂–∞ —Ç–æ–≤–∞—Ä–∞ ü§ù', callback_data='yes_9')
        btn2 = types.InlineKeyboardButton('–°–±–æ—Ä –ª–∏–¥–æ–≤ üìä', '')
        btn3 = types.InlineKeyboardButton('–ü—Ä–∏–≥–ª–∞—à–µ–Ω–∏–µ –Ω–∞ —Å–æ–±—ã—Ç–∏–µ üéü', '')
        btn4 = types.InlineKeyboardButton('–î—Ä—É–≥–æ–µ... üì¶', '')
        markup.row(btn1)
        markup.row(btn2)
        markup.row(btn3)
        markup.row(btn4)
        bot.send_message(call.message.chat.id,
                         '–í—ã–±–µ—Ä–∏—Ç–µ —Å–ø–µ—Ü–∏—Ñ–∏–∫—É üìÅ',
                         reply_markup=markup)

    if call.data == "yes_9":
        markup = types.InlineKeyboardMarkup()
        btn1 = types.InlineKeyboardButton('–î–∞', '')
        btn2 = types.InlineKeyboardButton('–ù–µ—Ç', callback_data='yes_11')
        markup.row(btn1)
        markup.row(btn2)
        bot.send_message(call.message.chat.id,
                         '–£ –≤–∞—Å –µ—Å—Ç—å –¥–∏–∑–∞–π–Ω, –º–∞–∫–µ—Ç, –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è, —Ç–µ–∫—Å—Ç—ã üóÇ ?',
                         reply_markup=markup)

    if call.data == "yes_11":
        markup = types.InlineKeyboardMarkup()
        btn1 = types.InlineKeyboardButton('–ó–∞–∫–∞–∑–∞—Ç—å –¥–∏–∑–∞–π–Ω üé®', '')
        btn2 = types.InlineKeyboardButton('–ó–∞–∫–∞–∑–∞—Ç—å –∫–æ–ø–µ—Ä–∞–π—Ç–∏–Ω–≥ üíª', '')
        btn3 = types.InlineKeyboardButton('–ü–æ–ª—É—á–∏—Ç—å –∫–æ–Ω—Å—É–ª—å—Ç–∞—Ü–∏—é üë®üèª‚Äçüíª', '')
        markup.row(btn1)
        markup.row(btn2, btn3)
        bot.send_message(call.message.chat.id,
                         '–£ –≤–∞—Å –µ—Å—Ç—å –¥–∏–∑–∞–π–Ω, –º–∞–∫–µ—Ç, –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è, —Ç–µ–∫—Å—Ç—ã üóÇ ?',
                         reply_markup=markup)


bot.polling(none_stop=True, interval=0)
