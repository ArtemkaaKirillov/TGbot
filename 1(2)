import telebot
from telebot import types

token = "6657590037:AAH4nYyRYskgnUUR8phgtobMMAQ38lPCxCY"
bot = telebot.TeleBot(token)


@bot.message_handler(commands=['start'])
def start(message):
    smiley_unicode = '\U0001F604'
    markup = types.InlineKeyboardMarkup(row_width=2)
    btn1 = types.InlineKeyboardButton(f'–ü–æ—Å–µ—Ç–∏—Ç—å —Å–∞–π—Ç {smiley_unicode}', 'https://andreykirillov.art/')
    btn2 = types.InlineKeyboardButton('–£—Å–ª—É–≥–∏', callback_data='yes_2')
    btn3 = types.InlineKeyboardButton('–°–≤—è–∑—å', callback_data='yes')
    markup.row(btn1, btn2, btn3)
    bot.send_message(message.chat.id, '–ó–¥—Ä–∞–≤—Å—Ç–≤—É–π—Ç–µ , —ç—Ç–æ –∫–æ–º–ø–∞–Ω–∏—è Artex –¥–ª—è –¥–∞–ª—å–Ω–µ–π—à–µ–≥–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è –Ω–∞–∂–º–∏—Ç–µ —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤—É—é—â—É—é –∫–Ω–æ–ø–∫—É', reply_markup=markup)


@bot.callback_query_handler(func=lambda call: True)
def callback(call):
    if call.data == "yes_2":
        markup = types.InlineKeyboardMarkup()
        btn1 = types.InlineKeyboardButton('–°–æ–∑–¥–∞–Ω–∏–µ —Å–∞–π—Ç–æ–≤', 'https://andreykirillov.art/sozdanie-sajtov/')
        btn2 = types.InlineKeyboardButton('–†–µ–∫–ª–∞–º–∞', 'https://andreykirillov.art/1-2/')
        btn3 = types.InlineKeyboardButton('–ü—Ä–æ–¥–≤–∏–∂–µ–Ω–∏–µ', 'https://andreykirillov.art/prodvizhenie/')
        markup.row(btn1, btn2, btn3)
        bot.send_message(call.message.chat.id,
                         '–í—ã–±–µ—Ä–∏—Ç–µ –ø–æ–¥—Ö–æ–¥—è–∏–π –¥–ª—è –≤–∞—Å —Å–ø–æ—Å–æ–±',
                         reply_markup=markup)

    if call.data == "yes":
        markup = types.InlineKeyboardMarkup()
        btn1 = types.InlineKeyboardButton('–í–ö', 'https://vk.com/kirillova_ru')
        btn2 = types.InlineKeyboardButton('–¢–µ–ª–µ—Ñ–æ–Ω', 'tel: +79033584455')
        markup.row(btn1)
        bot.send_message(call.message.chat.id,
                        '–í—ã–±–µ—Ä–∏—Ç–µ —Å–ø–æ—Å–æ–± —Å–≤—è–∑–∏',
                        reply_markup=markup)

bot.polling(none_stop=True, interval=0)





